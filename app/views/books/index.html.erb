<h1>Books</h1>


<h2>New Book</h2>
<%= form_for(@book, url: '/books') do |f| %>

  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_field :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>